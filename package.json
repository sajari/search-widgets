{
  "private": true,
  "name": "@sajari/search-widgets",
  "version": "1.0.0-beta.24",
  "license": "MIT",
  "browserslist": "> 1%",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "build": "cross-env NODE_ENV=production preact build --no-prerender --no-sw --no-esm",
    "serve": "sirv build --cors --single",
    "analyze": "cross-env NODE_ENV=production preact build --analyze",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src",
    "dev": "preact watch --template ./src/dev/index.ejs --no-esm",
    "dev:ssl": "preact watch --template ./src/dev/index.ejs --no-esm --host search-widgets.local --https --cert ./src/dev/cert.pem --key ./src/dev/cert.key",
    "deploy": "eslint . && yarn build && node -r esm scripts/deploy.js",
    "deploy:latest": "cli-confirm 'This will deploy the current version to root and major version loaders. Are you sure?' && node -r esm scripts/deploy.js --latest",
    "cert": "openssl req -x509 -nodes -days 365 -newkey rsa:2048 -keyout ./src/dev/cert.key -out ./src/dev/cert.pem -config ./src/dev/req.cnf -sha256"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,md,scss}": "prettier --write",
    "*.{js,jsx,ts,tsx}": "eslint --fix"
  },
  "babelMacros": {
    "twin": {
      "preset": "styled-components"
    }
  },
  "devDependencies": {
    "@babel/plugin-transform-react-jsx": "^7.12.12",
    "@google-cloud/storage": "^5.7.4",
    "@sajari/eslint-config": "^0.1.1",
    "@types/lodash-es": "^4.17.4",
    "@types/react": "^17.0.0",
    "@types/webpack-env": "^1.16.0",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "ansi-colors": "^4.1.1",
    "babel-plugin-macros": "3.0.1",
    "cli-confirm": "^1.0.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.19.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "fancy-log": "^1.3.3",
    "husky": "^4.3.8",
    "if-env": "^1.0.4",
    "lint-staged": "^10.5.3",
    "postcss": "^8.2.4",
    "preact-cli": "^3.0.5",
    "prettier": "^2.2.1",
    "prettier-eslint": "^12.0.0",
    "sirv-cli": "^1.0.11",
    "terser": "^5.5.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@sajari/react-components": "^1.5.3",
    "@sajari/react-hooks": "^1.4.3",
    "@sajari/react-sdk-utils": "^1.3.4",
    "@sajari/react-search-ui": "^1.7.10",
    "lodash-es": "^4.17.20",
    "preact": "^10.5.12",
    "mitt": "^2.1.0",
    "preact-habitat": "^3.3.0",
    "preact-render-to-string": "^5.1.12",
    "query-string": "^6.13.8",
    "resize-observer-polyfill": "^1.5.1",
    "styled-components": "^5.2.1",
    "tailwindcss": "^2.0.2",
    "twin.macro": "^2.1.1"
  },
  "alias": {
    "react": "preact/compat",
    "react-dom": "preact/compat"
  }
}
